{
  "name": "express-typeorm-starter-next",
  "version": "1.0.0",
  "description": "Express TypeORM Boilerplate with TypeScript.",
  "main": "./dist/server.js",
  "repository": "https://ovichowdhury@github.com/ovichowdhury/express-typeorm-starter.git",
  "author": "Nahid Chowdhury",
  "license": "MIT",
  "engines": {
    "node": ">=16 <17"
  },
  "scripts": {
    "start": "cross-env NODE_PATH=./dist && cross-env NODE_ENV=production && node --unhandled-rejections=strict ./dist/server.js",
    "dev": "cross-env DEBUG=* && cross-env NODE_ENV=development && nodemon ./src/server.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "jest --watchAll --no-cache",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "check:types": "tsc --pretty --noEmit",
    "check:format": "prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "typeorm": "npx typeorm-ts-node-commonjs",
    "migration:generate": "yarn typeorm migration:generate -d ./src/database/index.ts",
    "migration:run": "yarn typeorm migration:run -d ./src/database/index.ts",
    "migration:revert": "yarn typeorm migration:revert -d ./src/database/index.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/lodash": "^4.14.186",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.8.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  }
}
